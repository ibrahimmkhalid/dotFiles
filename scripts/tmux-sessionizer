#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$((
      find ~/repos -mindepth 1 -maxdepth 2 -type d,l;
      find ~/ ~/.config -mindepth 0 -maxdepth 1 -type d,l;
      find ~/repos/sjsu/uni/data-228 ~/repos/sjsu/uni/data-245 ~/repos/sjsu/uni/data-270 -mindepth 0 -maxdepth 1 -type d,l;
    )| fzf)
fi


if [[ -z $selected ]]; then
    exit 0
fi

# if selected is a uni course, then set the selected_name to the full path
if [[ $selected == *repos/sjsu/uni* ]]; then
  selected_name=$(echo $selected | sed 's/.*\/sjsu\/uni\///' | tr . _)
else
  selected_name=$(basename "$selected" | tr . _)
fi

tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s $selected_name -c $selected
    exit 0
fi

if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -c $selected
fi

tmux attach -t $selected_name || tmux switch-client -t $selected_name
